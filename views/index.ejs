<% include ./partials/header %>
<!-- JUMBOTRON -->
	<div class="container">
		<a href="/gallery"><img class="home-image" src="https://res.cloudinary.com/thariqphoto/image/upload/v1572932198/thariqphoto/home_logo_font_pr3f29.png"></a>
		<p class="home-tagline">Landscape and Cityscape Photo Gallery</p>
		<% if(currentUser){ %>
			<a class="btn btn-success btn-lg" id="add-photo" href="/gallery/new">Add New Photo</a>
		<% } %>
		<p class="home-caption">*click on image to zoom in</p>
	</div>
	
<!-- CATEGORIES -->
	<div class="container categories">
		<div class="row">
			<div class="category col-lg-3 col-md-3 col-sm-3 col-xs-6">
				<a href="/gallery" 
				  	<%if(selectedCategory=="All"){%>		
						id="selectedCategory"
					<% } %>
				><i class="fas fa-photo"></i>   All   </a>
			</div>
			<div class="category col-lg-3 col-md-3 col-sm-3 col-xs-6">
				<a href="/gallery/category/Landscape"
					<%if(selectedCategory=="Landscape"){%>		
						id="selectedCategory"
					<% } %>
				><i class="fas fa-mountain"></i> Landscape</a>
			</div>
			<div class="category col-lg-3 col-md-3 col-sm-3 col-xs-6">
				<a href="/gallery/category/Cityscape"
					<%if(selectedCategory=="Cityscape"){%>		
						id="selectedCategory"
					<% } %>
				><i class="fas fa-building"></i> Cityscape</a>
			</div>
			<div class="category col-lg-3 col-md-3 col-sm-3 col-xs-6">
				<a href="/gallery/category/SmallWorld"
				<%if(selectedCategory=="SmallWorld"){%>		
					id="selectedCategory"
				<% } %>	
				><i class="fas fa-bug"></i> Small World</a>
			</div>
		</div>
	</div>

<!-- Gallery -->
	<div class="container">
		<div class="row flex">
			<% posts.forEach(function(post){ %>
				<div class="imgContainer col-lg-4 col-md-6 col-sm-6 col-xs-12">
					
					<div class="imgBtn" style="">
					<% if(currentUser){ %>
						<a class="btn btn-warning" href="/gallery/<%=post._id%>/edit">Edit</a>
						<form id="delete-form" action="/gallery/<%=post._id%>?_method=DELETE" method="POST">
							<input type="submit" class= "btn btn-danger" value="Delete">
						</form>
					<% } %>
					</div>
					
					<img class="index-image" src="<%=post.image%>" alt="<%=post.description%>">
					<div id="myModal" class="modal">
  						<span class="close"></span>
  						<img class="modal-content" id="modalImg">
  						<div id="caption"></div>
					</div> 			
				</div>
			<% }); %>		
		</div>
	</div>
	
	<script type="text/javascript" src="/script/modalImage.js"></script>

<% include ./partials/footer.ejs %>
