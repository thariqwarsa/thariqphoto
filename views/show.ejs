<% include ./partials/header %>

<div class="container">
	<h2><%= post.title %></h2>
	<img src="<%= post.image %>">
	<h3><%= post.description %></h3>
	<h4>category: <%= post.category %></h4>
		
	<a class="btn btn-warning" href="/gallery/<%=post._id%>/edit">Edit</a>
	
	<form id="delete-form" action="/gallery/<%=post._id%>?_method=DELETE" method="POST">
		<input type="submit" class= "btn btn-danger" value="Delete">
	</form>
</div>

