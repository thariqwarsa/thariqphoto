<!-- =============================================================== -->
<!-- ====================== FLASH MESSAGE ========================== -->
<!-- =============================================================== -->
	
<div class="container flash-container" style="z-index: 1">
	<% if(error && error.length>0){ %>
		<div class="alert alert-danger">
			<%= error %>
		</div>
	<% } %>
	<% if(success && success.length>0){ %>
		<div class="alert alert-success">
			<%= success %>
		</div>
	<% } %>
</div>
	
		

		 